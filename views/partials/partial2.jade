// Remarks Partial
.modal-header
	h3.modal-title
		| {{title}}
.modal-body
	div(ng-repeat = "remark in remarks.slice().reverse()")
		.col-md-2
			{{remark.created_on| date}}
		.col-md-10
			p(ng-bind="remark.content",tooltip="{{remark.created_on| date}}", tooltip-placement="bottom")
.modal-footer
	.col-md-10
			textarea.form-control(rows="3", ng-model="postRemark.content")
	.col-md-2
			button.btn.btn-success(ng-click="submit()") OK
			button.btn.btn-success(ng-click="cancel()") Cancel
